<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/leetcodepnt"
    android:layout_margin="8dp"
    android:clickable="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <RelativeLayout
            android:id="@+id/collapsedlayout"

            android:padding="15dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LeetCode"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:fontFamily="@font/poppins_bold"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:id="@+id/hard"
                android:fontFamily="@font/poppins_medium"
                />

            <TextView
                android:id="@+id/hardcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:layout_toRightOf="@id/hard"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins_medium"
                />
            <ProgressBar
                android:id="@+id/p_Bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:layout_below="@+id/hard"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/p_Bar"
                android:id="@+id/medium"
                android:fontFamily="@font/poppins_medium"/>
            <TextView
                android:id="@+id/mediumcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/p_Bar"
                android:layout_toRightOf="@id/medium"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins_medium"
                />
            <ProgressBar
                android:id="@+id/p_Bar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:layout_below="@+id/medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/p_Bar1"
                android:id="@+id/easy"
                android:fontFamily="@font/poppins_medium"/>
            <TextView
                android:id="@+id/easycount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/p_Bar1"
                android:layout_toRightOf="@id/easy"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/poppins_medium"
                />
            <ProgressBar
                android:id="@+id/p_Bar3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="0"
                android:layout_below="@+id/easy"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/p_Bar3"
                android:id="@+id/Totalproblems"
                android:fontFamily="@font/poppins_medium"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Totalproblems"
                android:id="@+id/acceptancerate"
                android:fontFamily="@font/poppins_medium"/>


        </RelativeLayout>
        <TextView
            android:id="@+id/ContestList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YOUR UPCOMING CONTESTS-"
            android:textSize="18dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_below="@+id/collapsedlayout"
            android:fontFamily="@font/poppins_bold"
            />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
